<?xml version="1.0" encoding="UTF-8"?>
<checkstyle version="8.45">
    <module name="Checker">
        <!-- Regla para verificar las convenciones de nombre de clase -->
        <module name="CustomImportOrder">
            <property name="order" value="alphabetical"/>
        </module>

        <!-- Regla para verificar la longitud máxima de línea -->
        <module name="LineLength">
            <property name="max" value="80"/>
        </module>

        <!-- Regla para evitar que se usen más de 1 espacio en los tabuladores -->
        <module name="Indentation">
            <property name="tabWidth" value="4"/>  <!-- Usa 4 espacios por tabulación -->
        </module>

        <!-- Regla para verificar los nombres de las variables -->
        <module name="NamingConvention">
            <property name="ignorePattern" value="^.*[a-zA-Z0-9]+$"/>
        </module>

        <!-- Regla para evitar métodos o clases sin comentarios -->
        <module name="JavadocMethod">
            <property name="allowMissingJavadoc" value="false"/>
        </module>

    </module>
</checkstyle>
